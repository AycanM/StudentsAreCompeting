@model IEnumerable<KnowledgeCompetitionWebApp.Models.ResultsToDisplay>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row clearfix">
    @foreach (var result in Model)
    {
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 result" data-competition="">
            <div class="card">
                <div class="body">
                    <div class="list-group">
                        <a href="javascript:void(0);" class="list-group-item active">
                            <h4 class="list-group-item-heading"><strong>Kategori: </strong>@result.CategoryName.ToUpper()</h4>

                        </a>
                        <a href="javascript:void(0);" class="list-group-item">
                            <h4 class="list-group-item-heading"><strong>Tarih-Saat: </strong>@result.CompetitionDate.ToString("dd/MM/yyyy - HH:mm:ss")</h4>
                        </a>
                        <a href="javascript:void(0);" class="list-group-item">
                            <h4 class="list-group-item-heading"><strong>Sorulan Soru Adeti: </strong>@result.QuestionsCount</h4>
                        </a>
                        <a href="javascript:void(0);" class="list-group-item">
                            <h4 class="list-group-item-heading"><strong>Cevaplanan Soru Adeti: </strong>@result.AnsweredCount</h4>
                        </a>
                        <a href="@Url.Action("CompetitionDetail", "Admin", new { ResultId = result.CompetitionId})" class="btn btn-block btn-lg btn-primary waves-effect"><i class="material-icons">web</i> <span>Görüntüle</span></a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
